---
/**
 * Page Expertise — Editorial Luxe
 * 3 layouts varies (full-width, asymetrique, bleed) comme WhatWeDo
 * Clip-reveals, parallax, headings mixtes, numeros surdimensionnes
 */
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';
import HeroInner from '@components/react/HeroInner';
---

<Layout
  title="Notre Expertise — Renovation, Design & Prestige | SB Design Lyon"
  description="Renovation complete, design d'interieur et espaces de prestige a Lyon. SB Design vous accompagne de la conception a la livraison cle en main. Devis gratuit."
>

  <!-- Hero dynamique -->
  <HeroInner
    client:load
    images={[
      '/images/projets/Architecture-interieure-appartement-haussmannien-Lyon-6.jpg',
      '/images/projets/RSD-Agencements-Architecte-interieur-Lyon-15.jpg',
      '/images/projets/Archi-interieure-renovation-appartement-Tete-d-Or-Lyon.jpg',
    ]}
    label="Expertise"
    title='<span class="font-[Playfair_Display]">Notre</span> <span class="font-[Playfair_Display] italic">savoir-faire</span>'
    subtitle="Trois expertises complementaires pour transformer vos espaces en lieux d'exception qui vous ressemblent."
  />

  <!-- Service 01 — Renovation : Image full-width + texte offset droite -->
  <Section padding="lg" background="white">
    <Container>
      <div class="relative mb-24 md:mb-32" id="renovation" data-reveal>
        <span class="section-number-xl">01</span>

        <div class="overflow-hidden mb-8 -mx-6 md:-mx-10" data-clip-reveal="bottom">
          <img
            src="/images/projets/Archi-interieure-renovation-appartement-ancien-Lyon-6.jpg"
            alt="Renovation appartement ancien Lyon 6e"
            class="w-full h-[400px] lg:h-[65vh] lg:min-h-[500px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]"
            data-parallax="0.12"
            loading="lazy"
          />
        </div>
        <div class="lg:ml-auto lg:max-w-[60%]" data-reveal>
          <span class="subsection-number">01</span>
          <h2 class="font-display text-subsection font-normal text-primary-dark mt-4 mb-6">
            <span class="font-display italic">Renovation</span> <span class="font-heading font-light">complete</span>
          </h2>
          <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.75] mb-8">
            De la conception a la livraison, nous orchestrons chaque etape de votre renovation.
            Coordination des corps de metier, respect des delais et du budget, suivi quotidien
            de l'avancement des travaux.
          </p>
          <ul class="space-y-3 mb-8" data-reveal data-reveal-delay="0.1">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
              </svg>
              <span class="font-body text-sm font-light text-[var(--color-text-light)]">Etude de faisabilite et conception architecturale</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
              </svg>
              <span class="font-body text-sm font-light text-[var(--color-text-light)]">Selection et coordination des artisans qualifies</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
              </svg>
              <span class="font-body text-sm font-light text-[var(--color-text-light)]">Suivi de chantier quotidien et controle qualite</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
              </svg>
              <span class="font-body text-sm font-light text-[var(--color-text-light)]">Livraison cle en main avec garanties completes</span>
            </li>
          </ul>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Bande image full-bleed -->
  <div class="group relative w-full h-[40vh] min-h-[280px] overflow-hidden" data-slide-in="left">
    <img
      src="/images/projets/RSD-salle-de-bains-Lyon-6-renovation-agencement-21.jpg"
      alt="Douche marbre vert renovation Lyon"
      class="w-full h-full object-cover transition-transform duration-[1.2s] ease-smooth group-hover:scale-[1.05]"
      data-parallax="0.1"
      loading="lazy"
    />
  </div>

  <!-- Service 02 — Design : Grille asymetrique 40/60 -->
  <Section padding="lg" background="warm">
    <Container>
      <div class="relative" id="design">
        <span class="section-number-xl">02</span>

        <div class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-10 lg:gap-16 items-end" data-reveal>
          {/* Texte gauche, aligne en bas */}
          <div>
            <span class="subsection-number">02</span>
            <h2 class="font-display text-subsection font-normal text-primary-dark mt-4 mb-6">
              <span class="font-display italic">Design</span> <span class="font-heading font-light">d'interieur</span>
            </h2>
            <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.75] mb-8">
              Notre regard creatif transforme vos espaces. Harmonie des couleurs,
              selection de materiaux nobles, mobilier sur-mesure — chaque element est pense pour
              creer une atmosphere unique.
            </p>
            <ul class="space-y-3 mb-8" data-reveal data-reveal-delay="0.1">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Moodboards et planches d'ambiance personnalisees</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Selection de materiaux nobles et durables</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Mobilier et luminaires sur-mesure</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Mise en scene et decoration finale</span>
              </li>
            </ul>
          </div>
          {/* Image plus grande a droite */}
          <div class="overflow-hidden" data-clip-reveal="right">
            <img
              src="/images/projets/Archi-interieure-renovation-appartement-Tete-d-Or-Lyon.jpg"
              alt="Design interieur contemporain Tete d'Or Lyon"
              class="w-full h-[500px] lg:h-[75vh] lg:min-h-[600px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]"
              data-parallax="0.12"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Bande image full-bleed -->
  <div class="group relative w-full h-[40vh] min-h-[280px] overflow-hidden" data-slide-in="right">
    <img
      src="/images/projets/Projet-salle-de-bains-marbre-Lyon.jpg"
      alt="Salle de bains en marbre Lyon"
      class="w-full h-full object-cover transition-transform duration-[1.2s] ease-smooth group-hover:scale-[1.05]"
      data-parallax="0.1"
      loading="lazy"
    />
  </div>

  <!-- Service 03 — Prestige : Grille 50/50 avec image bleed gauche -->
  <Section padding="lg" background="white">
    <Container>
      <div class="relative" id="prestige">
        <span class="section-number-xl">03</span>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-20 items-center" data-reveal>
          {/* Image avec debordement gauche */}
          <div class="lg:-ml-8 overflow-hidden" data-clip-reveal="left">
            <img
              src="/images/projets/projetc-projc1.jpg"
              alt="Villa de prestige avec piscine"
              class="w-full h-[500px] lg:h-[85vh] lg:min-h-[650px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]"
              data-parallax="0.12"
              loading="lazy"
            />
          </div>
          {/* Texte droite */}
          <div>
            <span class="subsection-number">03</span>
            <h2 class="font-display text-subsection font-normal text-primary-dark mt-4 mb-6">
              <span class="font-display italic">Espaces</span> <span class="font-heading font-light">de prestige</span>
            </h2>
            <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.75] mb-8">
              Appartements haussmanniens, villas contemporaines, penthouses — nous maitrisons
              les codes du luxe. Expertise technique et sensibilite esthetique au service
              de realisations d'exception.
            </p>
            <ul class="space-y-3 mb-8" data-reveal data-reveal-delay="0.1">
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Restauration de patrimoine et elements d'epoque</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Domotique et technologies intelligentes</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Espaces wellness : spa, piscine, hammam</span>
              </li>
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
                <span class="font-body text-sm font-light text-[var(--color-text-light)]">Amenagements exterieurs et paysagisme</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA -->
  <Section background="dark" padding="lg">
    <Container>
      <div class="text-center max-w-2xl mx-auto" data-reveal>
        <h2 class="font-display text-section font-normal text-white mb-6">
          <span class="font-display italic">Parlons de</span> <span class="font-heading font-light">votre projet</span>
        </h2>
        <p class="font-body text-lg font-light text-white/70 mb-10 leading-relaxed">
          Chaque espace merite une attention particuliere. Contactez-nous pour
          une consultation personnalisee.
        </p>
        <Button href="/contact" variant="primary" size="lg">
          Prendre rendez-vous
        </Button>
      </div>
    </Container>
  </Section>

</Layout>
