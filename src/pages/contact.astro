---
/**
 * Page Contact — Editorial Luxe
 * Formulaire + coordonnees avec reveals, headings mixtes, decorations dorees
 */
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import HeroInner from '@components/react/HeroInner';
---

<Layout
  title="Contact — SB Design architecte d'interieur Lyon & Chassieu"
  description="Contactez SB Design pour votre projet de renovation ou construction a Lyon et dans le Var. Devis gratuit. Tel : 06 09 45 92 45."
>

  <!-- Hero dynamique -->
  <HeroInner
    client:load
    images={[
      'https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?w=1920&q=90',
      'https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=1920&q=90',
      'https://images.unsplash.com/photo-1600210492486-724fe5c67fb0?w=1920&q=90',
    ]}
    label="Contact"
    title='<span class="font-[Playfair_Display]">Parlons de</span> <span class="font-[Playfair_Display] italic">votre projet</span>'
    subtitle="Chaque projet commence par une conversation. Contactez-nous pour une consultation personnalisee et sans engagement."
  />

  <!-- Formulaire + Coordonnees -->
  <Section padding="lg">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-[1.3fr_1fr] gap-12 lg:gap-20">

        <!-- Formulaire -->
        <div class="relative" data-reveal>
          {/* Ligne decorative doree */}
          <div class="hidden lg:block absolute -top-4 -left-4 w-24 h-px bg-accent-gold/30" />
          <div class="hidden lg:block absolute -top-4 -left-4 w-px h-24 bg-accent-gold/30" />

          <h2 class="font-heading text-subsection text-primary-dark mb-8">
            <span class="font-heading font-light">Demander</span> <span class="font-display italic font-normal">un devis</span>
          </h2>
          <form class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="firstname" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                  Prenom
                </label>
                <input
                  type="text"
                  id="firstname"
                  name="firstname"
                  required
                  class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300"
                  placeholder="Votre prenom"
                />
              </div>
              <div>
                <label for="lastname" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                  Nom
                </label>
                <input
                  type="text"
                  id="lastname"
                  name="lastname"
                  required
                  class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300"
                  placeholder="Votre nom"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300"
                placeholder="votre@email.fr"
              />
            </div>

            <div>
              <label for="phone" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Telephone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300"
                placeholder="06 00 00 00 00"
              />
            </div>

            <div>
              <label for="project" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Type de projet
              </label>
              <select
                id="project"
                name="project"
                class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark focus:outline-none focus:border-accent-gold transition-colors duration-300"
              >
                <option value="">Selectionnez...</option>
                <option value="renovation">Renovation complete</option>
                <option value="design">Design d'interieur</option>
                <option value="prestige">Espace de prestige</option>
                <option value="autre">Autre</option>
              </select>
            </div>

            <div>
              <label for="message" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Votre message
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300 resize-none"
                placeholder="Decrivez votre projet..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="inline-flex items-center justify-center px-8 py-4 bg-accent-gold text-white font-heading text-[15px] font-medium uppercase tracking-wider hover:bg-[#B8976B] transition-colors duration-500 w-full sm:w-auto"
            >
              Envoyer ma demande
            </button>
          </form>
        </div>

        <!-- Coordonnees -->
        <div data-reveal data-reveal-delay="0.15">
          <h2 class="font-heading text-subsection text-primary-dark mb-8">
            <span class="font-heading font-light">Nos</span> <span class="font-display italic font-normal">coordonnees</span>
          </h2>

          <div class="space-y-8">
            <div data-reveal data-reveal-delay="0.05">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Adresse
              </h3>
              <address class="font-body text-base font-light text-[var(--color-text-light)] not-italic leading-relaxed">
                8 rue Pierre et Marie Curie<br />
                69680 Chassieu, France
              </address>
            </div>

            <div data-reveal data-reveal-delay="0.1">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Telephone
              </h3>
              <a href="tel:+33609459245" class="font-body text-base font-light text-primary-dark hover:text-accent-brown transition-colors duration-300">
                06 09 45 92 45
              </a>
              <br />
              <a href="tel:+33699142214" class="font-body text-base font-light text-primary-dark hover:text-accent-brown transition-colors duration-300 mt-1 inline-block">
                06 99 14 22 14
              </a>
            </div>

            <div data-reveal data-reveal-delay="0.15">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Email
              </h3>
              <a href="mailto:info@sbdesign.fr" class="font-body text-base font-light text-primary-dark hover:text-accent-brown transition-colors duration-300">
                info@sbdesign.fr
              </a>
            </div>

            <div data-reveal data-reveal-delay="0.2">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">
                Horaires
              </h3>
              <p class="font-body text-base font-light text-[var(--color-text-light)] leading-relaxed">
                Lundi — Samedi : 10h — 12h / 14h — 18h30<br />
                Dimanche : ferme
              </p>
            </div>

            <!-- Reseaux sociaux -->
            <div data-reveal data-reveal-delay="0.25">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-4">
                Suivez-nous
              </h3>
              <div class="flex gap-4">
                <a href="https://www.instagram.com/rsd_agencements/" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="w-10 h-10 bg-primary-warm flex items-center justify-center hover:bg-accent-gold/20 transition-colors duration-300">
                  <svg class="w-5 h-5 text-accent-brown" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                </a>
                <a href="https://www.facebook.com/RSDagencements/" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="w-10 h-10 bg-primary-warm flex items-center justify-center hover:bg-accent-gold/20 transition-colors duration-300">
                  <svg class="w-5 h-5 text-accent-brown" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <!-- Image showroom -->
          <div class="mt-10 overflow-hidden" data-slide-in="right">
            <img
              src="https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=1600&q=90"
              alt="Showroom SB Design Lyon"
              class="w-full h-[300px] lg:h-[360px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]"
              loading="lazy"
            />
          </div>
        </div>

      </div>
    </Container>
  </Section>

</Layout>
