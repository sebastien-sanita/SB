---
/**
 * Page Contact — Editorial Luxe (FR)
 * Formulaire + coordonnées
 */
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import HeroInner from '@components/react/HeroInner';
import { t, tArray, getLocalizedPath } from '@i18n/index';
import type { Locale } from '@i18n/languages';

const lang: Locale = 'fr';
const p = 'contactPage' as const;
---

<Layout
  lang={lang}
  title={t(p, 'metaTitle', lang)}
  description={t(p, 'metaDesc', lang)}
>

  <div class="-mt-[80px]">
    <HeroInner
      client:load
      images={[
        '/images/expertise/luxury-entrance-hall.jpg',
        '/images/expertise/villa-riviera-aerial.jpg',
        '/images/expertise/villa-terrace-sea.jpg',
      ]}
      label={t(p, 'heroLabel', lang)}
      title=""
      titlePrefix={t(p, 'heroPrefix', lang)}
      titleMorphWords={tArray(p, 'heroMorphWords', lang)}
      subtitle={t(p, 'heroSubtitle', lang)}
    />
  </div>

  <Section padding="lg">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-[1.3fr_1fr] gap-12 lg:gap-20">

        <!-- Formulaire -->
        <div class="relative" data-reveal>
          <div class="hidden lg:block absolute -top-4 -left-4 w-24 h-px bg-accent-gold/30" />
          <div class="hidden lg:block absolute -top-4 -left-4 w-px h-24 bg-accent-gold/30" />

          <h2 class="font-heading text-subsection text-primary-dark mb-8">
            <span class="font-heading font-light">{t(p, 'formTitle1', lang)}</span> <span class="font-display font-bold uppercase">{t(p, 'formTitle2', lang)}</span>
          </h2>
          <form class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="firstname" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelFirstname', lang)}</label>
                <input type="text" id="firstname" name="firstname" required class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300" placeholder={t(p, 'placeholderFirstname', lang)} />
              </div>
              <div>
                <label for="lastname" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelLastname', lang)}</label>
                <input type="text" id="lastname" name="lastname" required class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300" placeholder={t(p, 'placeholderLastname', lang)} />
              </div>
            </div>

            <div>
              <label for="email" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelEmail', lang)}</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300" placeholder={t(p, 'placeholderEmail', lang)} />
            </div>

            <div>
              <label for="phone" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelPhone', lang)}</label>
              <input type="tel" id="phone" name="phone" class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300" placeholder={t(p, 'placeholderPhone', lang)} />
            </div>

            <div>
              <label for="project" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelProject', lang)}</label>
              <select id="project" name="project" class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark focus:outline-none focus:border-accent-gold transition-colors duration-300">
                <option value="">{t(p, 'selectDefault', lang)}</option>
                <option value="renovation">{t(p, 'selectRenovation', lang)}</option>
                <option value="design">{t(p, 'selectDesign', lang)}</option>
                <option value="prestige">{t(p, 'selectPrestige', lang)}</option>
                <option value="autre">{t(p, 'selectOther', lang)}</option>
              </select>
            </div>

            <div>
              <label for="message" class="block font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelMessage', lang)}</label>
              <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3.5 border border-border bg-background font-body text-sm text-primary-dark placeholder:text-[var(--color-text-light)]/50 focus:outline-none focus:border-accent-gold transition-colors duration-300 resize-none" placeholder={t(p, 'placeholderMessage', lang)}></textarea>
            </div>

            <button type="submit" class="inline-flex items-center justify-center px-8 py-4 bg-accent-gold text-white font-heading text-[15px] font-medium uppercase tracking-wider hover:bg-[#B8976B] transition-colors duration-500 w-full sm:w-auto">
              {t(p, 'submitBtn', lang)}
            </button>
          </form>
        </div>

        <!-- Coordonnées -->
        <div data-reveal data-reveal-delay="0.15">
          <h2 class="font-heading text-subsection text-primary-dark mb-8">
            <span class="font-heading font-light">{t(p, 'coordTitle1', lang)}</span> <span class="font-display font-bold uppercase">{t(p, 'coordTitle2', lang)}</span>
          </h2>

          <div class="space-y-8">
            <div data-reveal data-reveal-delay="0.05">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelAddress', lang)}</h3>
              <address class="font-body text-base font-light text-[var(--color-text-light)] not-italic leading-relaxed">
                8 rue Pierre et Marie Curie<br />69680 Chassieu, France
              </address>
            </div>

            <div data-reveal data-reveal-delay="0.1">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelPhone', lang)}</h3>
              <a href="tel:+33609459245" class="font-body text-base font-light text-primary-dark hover:text-accent-brown transition-colors duration-300">06 09 45 92 45</a>
              <br />
              <a href="tel:+33699142214" class="font-body text-base font-light text-primary-dark hover:text-accent-brown transition-colors duration-300 mt-1 inline-block">06 99 14 22 14</a>
            </div>

            <div data-reveal data-reveal-delay="0.15">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelEmail', lang)}</h3>
              <a href="mailto:contact@sbdesignriviera.fr" class="font-body text-base font-light text-primary-dark hover:text-accent-brown transition-colors duration-300">contact@sbdesignriviera.fr</a>
            </div>

            <div data-reveal data-reveal-delay="0.2">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-3">{t(p, 'labelHours', lang)}</h3>
              <p class="font-body text-base font-light text-[var(--color-text-light)] leading-relaxed" set:html={t(p, 'hours', lang).replace('\n', '<br />')} />
            </div>

            <div data-reveal data-reveal-delay="0.25">
              <h3 class="font-heading text-xs font-semibold text-accent-brown uppercase tracking-[0.15em] mb-4">{t(p, 'followUs', lang)}</h3>
              <div class="flex gap-4">
                <a href="https://www.instagram.com/sbdesignriviera/" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="w-10 h-10 bg-primary-warm flex items-center justify-center hover:bg-accent-gold/20 transition-colors duration-300">
                  <svg class="w-5 h-5 text-accent-brown" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                </a>
                <a href="https://www.linkedin.com/company/sbdesignriviera/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="w-10 h-10 bg-primary-warm flex items-center justify-center hover:bg-accent-gold/20 transition-colors duration-300">
                  <svg class="w-5 h-5 text-accent-brown" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>

          <div class="mt-10 overflow-hidden" data-slide-in="right">
            <img src="/images/expertise/modern-villa-dusk.jpg" alt="" class="w-full h-[300px] lg:h-[360px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]" loading="lazy" />
          </div>
        </div>

      </div>
    </Container>
  </Section>

</Layout>
