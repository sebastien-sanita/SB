---
/**
 * Page Projets — Portfolio complet avec filtres (FR)
 */
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import ProjectGrid from '@components/react/ProjectGrid';
import HeroInner from '@components/react/HeroInner';
import { projects } from '../../data/projects';
import { t, tArray } from '@i18n/index';
import type { Locale } from '@i18n/languages';

const lang: Locale = 'fr';
const p = 'projetsPage' as const;
---

<Layout
  lang={lang}
  title={t(p, 'metaTitle', lang)}
  description={t(p, 'metaDesc', lang)}
>

  <div class="-mt-[80px]">
    <HeroInner
      client:load
      images={[
        '/images/expertise/hero-riviera-1.jpg',
        '/images/expertise/hero-riviera-2.jpg',
        '/images/expertise/hero-riviera-3.jpg',
      ]}
      label={t(p, 'heroLabel', lang)}
      title=""
      titlePrefix={t(p, 'heroPrefix', lang)}
      titleMorphWords={tArray(p, 'heroMorphWords', lang)}
      subtitle={t(p, 'heroSubtitle', lang)}
    />
  </div>

  <!-- Intro éditoriale (style Manifeste) -->
  <Section background="warm" padding="md">
    <Container>
      <div class="relative mb-8 md:mb-10" data-reveal>
        <span class="section-number-xl">01</span>
        <span class="section-number">{t(p, 'introNumber', lang)}</span>
        <h2 class="editorial-breadcrumb font-display text-section uppercase text-primary-dark mt-3 cursor-default">
          <span class="editorial-nav-item font-light text-primary-dark/10">{t(p, 'introTitle1', lang)}</span>
          <span class="font-extralight text-primary-dark/15 mx-1 select-none">/</span>
          <span class="editorial-nav-item font-bold">{t(p, 'introTitle2', lang)}</span>
        </h2>
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-16 gap-y-5" data-reveal data-reveal-delay="0.1">
        <div class="space-y-4">
          <p class="font-display text-lg md:text-xl font-light text-primary-dark leading-[1.75]" set:html={t(p, 'introP1', lang)} />
        </div>
        <div class="space-y-4">
          <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.8]">{t(p, 'introP2', lang)}</p>
        </div>
      </div>
      <blockquote class="mt-10 md:mt-14 pt-8 border-t border-accent-gold/20 text-center" data-reveal data-reveal-delay="0.15">
        <p class="font-display text-xl md:text-2xl italic font-normal text-accent-brown leading-relaxed max-w-2xl mx-auto">
          &laquo; {t(p, 'introQuote', lang)} &raquo;
        </p>
      </blockquote>
    </Container>
  </Section>

  <Section padding="lg">
    <Container>
      <div data-reveal>
        <ProjectGrid projects={projects} client:load />
      </div>
    </Container>
  </Section>

</Layout>
