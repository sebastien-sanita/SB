---
/**
 * Page Projets — Portfolio complet avec filtres (Editorial Luxe)
 */
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import ProjectGrid from '@components/react/ProjectGrid';
import HeroInner from '@components/react/HeroInner';
import { projects } from '../../data/projects';
---

<Layout
  title="Nos Realisations — Renovation & Construction a Lyon | SB Design"
  description="Decouvrez les realisations du studio SB Design : renovation d'appartements, construction de villas, mobilier sur mesure a Lyon et dans le Var."
>

  <!-- Hero dynamique -->
  <HeroInner
    client:load
    images={[
      '/images/projets/Architecture-interieure-appartement-haut-de-gamme-Lyon-8.jpg',
      '/images/projets/Renovation-villa-bord-de-mer.jpg',
      '/images/projets/projetb-projb1.jpg',
    ]}
    label="Portfolio"
    title='<span style="font-family:Inter;font-weight:300">Nos</span> <span class="font-[Playfair_Display] italic">Realisations</span>'
    subtitle="Chaque projet est une histoire unique. Decouvrez notre savoir-faire a travers une selection de renovations d'exception."
  />

  <!-- Portfolio avec filtres -->
  <Section padding="lg">
    <Container>
      <div data-reveal>
        <ProjectGrid projects={projects} client:load />
      </div>
    </Container>
  </Section>

</Layout>
