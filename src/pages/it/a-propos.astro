---
/**
 * Page À propos — Editorial Luxe (IT)
 * Histoire familiale Bisciglia, valeurs, images chevauchées
 */
import Layout from '@layouts/Layout.astro';
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import Button from '@components/ui/Button.astro';
import HeroInner from '@components/react/HeroInner';
import { t, tArray, getLocalizedPath } from '@i18n/index';
import type { Locale } from '@i18n/languages';

const lang: Locale = 'it';
const p = 'aproposPage' as const;

const values = [
  { number: '01', title: t(p, 'value1Title', lang), description: t(p, 'value1Desc', lang) },
  { number: '02', title: t(p, 'value2Title', lang), description: t(p, 'value2Desc', lang) },
  { number: '03', title: t(p, 'value3Title', lang), description: t(p, 'value3Desc', lang) },
  { number: '04', title: t(p, 'value4Title', lang), description: t(p, 'value4Desc', lang) },
];
---

<Layout
  lang={lang}
  title={t(p, 'metaTitle', lang)}
  description={t(p, 'metaDesc', lang)}
>

  <HeroInner
    client:load
    images={[
      '/images/expertise/villa-garden-pool.jpg',
      '/images/expertise/luxury-dining-room.jpg',
      '/images/expertise/modern-kitchen-luxury.jpg',
    ]}
    label={t(p, 'heroLabel', lang)}
    title=""
    titlePrefix={t(p, 'heroPrefix', lang)}
    titleMorphWords={tArray(p, 'heroMorphWords', lang)}
    subtitle={t(p, 'heroSubtitle', lang)}
  />

  <!-- Histoire -->
  <Section padding="lg">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_1.3fr] gap-12 lg:gap-20 items-start">
        <div class="relative" data-reveal>
          <div class="hidden lg:block absolute -top-6 -left-6 w-28 h-px bg-accent-gold/30" />
          <div class="hidden lg:block absolute -top-6 -left-6 w-px h-28 bg-accent-gold/30" />

          <span class="subsection-number">{t(p, 'historyLabel', lang)}</span>
          <h2 class="font-display text-subsection font-bold uppercase text-primary-dark mt-4 mb-8">
            {t(p, 'historyTitle1', lang)} {t(p, 'historyTitle2', lang)}<br /><span class="font-heading font-light">{t(p, 'historyTitle3', lang)}</span>
          </h2>
          <div class="space-y-6">
            <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.75]" data-reveal data-reveal-delay="0.1">
              {t(p, 'historyP1', lang)}
            </p>
            <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.75]" data-reveal data-reveal-delay="0.2">
              {t(p, 'historyP2', lang)}
            </p>
            <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.75]" data-reveal data-reveal-delay="0.3">
              {t(p, 'historyP3', lang)}
            </p>
          </div>
          <blockquote class="mt-10 pl-6 border-l-2 border-accent-gold" data-reveal data-reveal-delay="0.35">
            <p class="font-display text-xl italic font-normal text-primary-dark leading-relaxed">
              &laquo; {t(p, 'historyQuote', lang)} &raquo;
            </p>
          </blockquote>
        </div>

        <div class="relative mt-8 lg:mt-16" data-clip-reveal="right">
          <div class="overflow-hidden">
            <img src="/images/expertise/villa-garden-pool.jpg" alt="" class="w-full h-[500px] lg:h-[75vh] lg:min-h-[600px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]" data-parallax="0.12" loading="lazy" />
          </div>
          <div class="hidden lg:block absolute -bottom-14 -left-16 w-[260px] h-[360px] overflow-hidden z-10 group/secondary">
            <img src="/images/expertise/luxury-dining-room.jpg" alt="" class="w-full h-full object-cover transition-transform duration-700 ease-smooth group-hover/secondary:scale-[1.08]" loading="lazy" />
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <div class="group relative w-full h-[45vh] min-h-[300px] overflow-hidden" data-slide-in="bottom">
    <img src="/images/expertise/villa-terrace-sea.jpg" alt="" class="w-full h-full object-cover transition-transform duration-[1.2s] ease-smooth group-hover:scale-[1.05]" data-parallax="0.12" loading="lazy" />
  </div>

  <!-- Valeurs -->
  <Section background="warm" padding="lg">
    <Container>
      <div class="relative mb-16 md:mb-24" data-reveal>
        <span class="section-number-xl">V</span>
        <span class="section-number">{t(p, 'valuesLabel', lang)}</span>
        <h2 class="font-heading text-section text-primary-dark mt-6" data-split-words>
          <span class="font-heading font-light">{t(p, 'valuesTitle1', lang)}</span> <span class="font-display font-bold uppercase">{t(p, 'valuesTitle2', lang)}</span>
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-16">
        {values.map((value, i) => (
          <div class="flex gap-6" data-reveal data-reveal-delay={`${i * 0.1}`}>
            <span class="font-heading text-3xl font-light text-accent-gold/40 shrink-0">{value.number}</span>
            <div>
              <h3 class="font-display text-xl font-medium uppercase text-primary-dark mb-3">{value.title}</h3>
              <p class="font-body text-sm font-light text-[var(--color-text-light)] leading-relaxed">{value.description}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-20" data-mosaic>
        <div class="overflow-hidden" data-mosaic-item>
          <img src="/images/expertise/villa-panoramic-view.jpg" alt="" class="w-full h-[280px] lg:h-[360px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]" loading="lazy" />
        </div>
        <div class="overflow-hidden" data-mosaic-item>
          <img src="/images/expertise/interior-chambre-1.jpg" alt="" class="w-full h-[280px] lg:h-[360px] object-cover transition-transform duration-700 ease-smooth hover:scale-[1.05]" loading="lazy" />
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA -->
  <Section padding="lg">
    <Container>
      <div class="text-center max-w-2xl mx-auto" data-reveal>
        <h2 class="font-display text-section font-bold uppercase text-primary-dark mb-6">
          {t(p, 'ctaTitle1', lang)} {t(p, 'ctaTitle2', lang)} <span class="font-heading font-light">{t(p, 'ctaTitle3', lang)}</span>
        </h2>
        <p class="font-body text-lg font-light text-[var(--color-text-light)] mb-10 leading-relaxed">
          {t(p, 'ctaDesc', lang)}
        </p>
        <Button href={getLocalizedPath('/contact', lang)} variant="primary" size="lg">
          {t(p, 'ctaBtn', lang)}
        </Button>
      </div>
    </Container>
  </Section>

</Layout>
