---
/**
 * Footer — Minimaliste architectural, gris clair
 * Position fixed pour effet "reveal" au scroll
 * Pas de grain, pas de SVG corners, couleurs sombres sur fond clair
 */
import Container from '@components/ui/Container.astro';
---

<footer
  id="main-footer"
  class="bg-[#F5F7F9] text-primary-dark pt-24 md:pt-[120px] pb-10 px-6 md:px-10"
  style="position: fixed; bottom: 0; left: 0; right: 0; z-index: 1;"
>
  <Container>

    {/* Grid 4 colonnes */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[1.5fr_1fr_1fr_1.2fr] gap-12 lg:gap-16 mb-20 pb-16 border-b border-primary-dark/10">

      {/* Col 1 : Branding */}
      <div>
        <h3 class="font-display text-[28px] font-semibold text-primary-dark mb-4">
          SB Design
        </h3>
        <p class="text-[15px] leading-[1.8] text-text-secondary max-w-xs">
          Agencements de caractere.<br />
          Architecture d'interieur et renovation d'exception a Lyon et dans le Var depuis plus de 35 ans.
        </p>
      </div>

      {/* Col 2 : Navigation */}
      <div>
        <h4 class="font-heading text-sm font-semibold uppercase tracking-[0.2em] text-text-secondary/60 mb-6">
          Navigation
        </h4>
        <ul class="space-y-3">
          <li><a href="/" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">Accueil</a></li>
          <li><a href="/projets" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">Nos Projets</a></li>
          <li><a href="/expertise" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">Notre Expertise</a></li>
          <li><a href="/a-propos" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">A Propos</a></li>
          <li><a href="/contact" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">Contact</a></li>
        </ul>
      </div>

      {/* Col 3 : Realisations */}
      <div>
        <h4 class="font-heading text-sm font-semibold uppercase tracking-[0.2em] text-text-secondary/60 mb-6">
          Nos Realisations
        </h4>
        <ul class="space-y-3">
          <li><a href="/projets#appartements" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">Appartements</a></li>
          <li><a href="/projets#residences" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">Residences</a></li>
          <li><a href="/projets#maisons" class="text-primary-dark/70 hover:text-primary-dark transition-colors duration-300 block py-[6px]">Villas</a></li>
        </ul>
      </div>

      {/* Col 4 : Contact */}
      <div>
        <h4 class="font-heading text-sm font-semibold uppercase tracking-[0.2em] text-text-secondary/60 mb-6">
          Contact
        </h4>
        <ul class="space-y-3 text-primary-dark/70">
          <li>
            <a href="tel:+33609459245" class="hover:text-primary-dark transition-colors duration-300">
              06 09 45 92 45
            </a>
          </li>
          <li>
            <a href="tel:+33699142214" class="hover:text-primary-dark transition-colors duration-300">
              06 99 14 22 14
            </a>
          </li>
          <li>
            <a href="mailto:info@sbdesign.fr" class="hover:text-primary-dark transition-colors duration-300">
              info@sbdesign.fr
            </a>
          </li>
          <li>
            <address class="not-italic text-text-secondary leading-relaxed">
              8 rue Pierre et Marie Curie<br />
              69680 Chassieu, France
            </address>
          </li>
        </ul>

        {/* Reseaux sociaux — square icons */}
        <div class="flex gap-4 mt-6">
          <a
            href="https://www.instagram.com/rsd_agencements/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="w-9 h-9 bg-primary-dark/[0.06] flex items-center justify-center hover:bg-primary-dark/[0.12] transition-colors duration-300"
          >
            <svg class="w-[18px] h-[18px] text-primary-dark/70" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
            </svg>
          </a>
          <a
            href="https://www.facebook.com/RSDagencements/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
            class="w-9 h-9 bg-primary-dark/[0.06] flex items-center justify-center hover:bg-primary-dark/[0.12] transition-colors duration-300"
          >
            <svg class="w-[18px] h-[18px] text-primary-dark/70" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>
        </div>
      </div>

    </div>

    {/* Footer bottom */}
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-text-secondary/60">
      <p>&copy; {new Date().getFullYear()} SB Design. Tous droits reserves.</p>
      <div class="flex items-center gap-4">
        <a href="/mentions-legales" class="hover:text-primary-dark transition-colors duration-300">Mentions legales</a>
        <span class="text-primary-dark/20">&bull;</span>
        <a href="/confidentialite" class="hover:text-primary-dark transition-colors duration-300">Confidentialite</a>
      </div>
    </div>

  </Container>
</footer>
