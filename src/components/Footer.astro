---
/**
 * Footer — Noir corporate, style international luxe
 * Position fixed pour effet "reveal" au scroll
 * Background #1A1A1A avec textes blancs/or
 * i18n support
 */
import Container from '@components/ui/Container.astro';
import { t, getLocalizedPath, getLangFromUrl } from '@i18n/index';
import type { Locale } from '@i18n/languages';

interface Props { lang?: Locale; }
const lang = Astro.props.lang ?? getLangFromUrl(Astro.url);
---

<footer
  id="main-footer"
  class="bg-primary-dark text-white pt-24 md:pt-[120px] pb-10 px-6 md:px-10 relative overflow-hidden"
  style="position: fixed; bottom: 0; left: 0; right: 0; z-index: 1;"
>
  {/* Coins décoratifs SVG — style Aker */}
  <svg class="absolute top-6 left-6 w-8 h-8 text-white/[0.06]" viewBox="0 0 32 32" fill="currentColor">
    <path d="M0 0h10v1.5H1.5V10H0z" />
  </svg>
  <svg class="absolute top-6 right-6 w-8 h-8 text-white/[0.06]" viewBox="0 0 32 32" fill="currentColor">
    <path d="M32 0H22v1.5h8.5V10H32z" />
  </svg>
  <svg class="absolute bottom-6 left-6 w-8 h-8 text-white/[0.06]" viewBox="0 0 32 32" fill="currentColor">
    <path d="M0 32h10v-1.5H1.5V22H0z" />
  </svg>
  <svg class="absolute bottom-6 right-6 w-8 h-8 text-white/[0.06]" viewBox="0 0 32 32" fill="currentColor">
    <path d="M32 32H22v-1.5h8.5V22H32z" />
  </svg>

  <Container>

    {/* Grid 4 colonnes */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[1.5fr_1fr_1fr_1.2fr] gap-12 lg:gap-16 mb-20 pb-16 border-b border-white/10">

      {/* Col 1 : Branding */}
      <div>
        <h3 class="font-display text-[28px] font-normal text-white mb-2">
          SB Design Riviera
        </h3>
        <p class="font-heading text-[11px] font-medium uppercase tracking-[0.2em] text-accent-gold mb-6">
          Luxury Transformation
        </p>
        <p class="text-[15px] leading-[1.8] text-white/60 max-w-xs">
          {t('footer', 'desc', lang)}
        </p>

        {/* Réseaux sociaux — cercles subtils */}
        <div class="flex gap-4 mt-8">
          <a
            href="https://www.linkedin.com/company/sbdesignriviera/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="w-10 h-10 rounded-full bg-white/[0.06] flex items-center justify-center hover:bg-accent-gold/20 hover:border-accent-gold transition-all duration-base border border-white/10"
          >
            <svg class="w-[18px] h-[18px] text-white/70" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="https://www.instagram.com/sbdesignriviera/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="w-10 h-10 rounded-full bg-white/[0.06] flex items-center justify-center hover:bg-accent-gold/20 hover:border-accent-gold transition-all duration-base border border-white/10"
          >
            <svg class="w-[18px] h-[18px] text-white/70" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
            </svg>
          </a>
        </div>
      </div>

      {/* Col 2 : Navigation */}
      <div>
        <h4 class="font-heading text-sm font-semibold uppercase tracking-[0.2em] text-white/40 mb-6">
          {t('footer', 'navTitle', lang)}
        </h4>
        <ul class="space-y-3">
          <li><a href={getLocalizedPath('/', lang)} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('footer', 'accueil', lang)}</a></li>
          <li><a href={getLocalizedPath('/projets', lang)} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('footer', 'nosProjets', lang)}</a></li>
          <li><a href={getLocalizedPath('/expertise', lang)} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('footer', 'notreExpertise', lang)}</a></li>
          <li><a href={getLocalizedPath('/a-propos', lang)} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('footer', 'leStudio', lang)}</a></li>
          <li><a href={getLocalizedPath('/contact', lang)} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('nav', 'contact', lang)}</a></li>
        </ul>
      </div>

      {/* Col 3 : Projets */}
      <div>
        <h4 class="font-heading text-sm font-semibold uppercase tracking-[0.2em] text-white/40 mb-6">
          {t('footer', 'projetsTitle', lang)}
        </h4>
        <ul class="space-y-3">
          <li><a href={`${getLocalizedPath('/projets', lang)}?type=renovation`} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('footer', 'renovation', lang)}</a></li>
          <li><a href={`${getLocalizedPath('/projets', lang)}?type=construction`} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('footer', 'construction', lang)}</a></li>
          <li><a href={getLocalizedPath('/projets', lang)} class="text-white/60 hover:text-white transition-colors duration-fast block py-[6px]">{t('footer', 'amenagement', lang)}</a></li>
        </ul>
      </div>

      {/* Col 4 : Contact */}
      <div>
        <h4 class="font-heading text-sm font-semibold uppercase tracking-[0.2em] text-white/40 mb-6">
          {t('footer', 'contactTitle', lang)}
        </h4>
        <ul class="space-y-3 text-white/60">
          <li>
            <a href="tel:+33609459245" class="hover:text-accent-gold transition-colors duration-fast">
              +33 6 09 45 92 45
            </a>
          </li>
          <li>
            <a href="mailto:contact@sbdesignriviera.fr" class="hover:text-accent-gold transition-colors duration-fast">
              contact@sbdesignriviera.fr
            </a>
          </li>
          <li>
            <address class="not-italic text-white/40 leading-relaxed mt-4" set:html={t('common', 'location', lang).replace('\n', '<br />')} />
          </li>
        </ul>
      </div>

    </div>

    {/* Footer bottom */}
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-white/40">
      <p>&copy; {new Date().getFullYear()} SB Design Riviera. {t('footer', 'copyright', lang)}</p>
      <div class="flex items-center gap-4">
        <span class="text-white/40">{t('footer', 'mentions', lang)}</span>
        <span class="text-white/20">&bull;</span>
        <span class="text-white/40">{t('footer', 'confidentialite', lang)}</span>
      </div>
    </div>

  </Container>
</footer>
