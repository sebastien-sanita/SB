---
/**
 * Manifeste — Section 01 (Vision & Positionnement)
 * Layout compact : titre + 2 colonnes de texte + 3 valeurs en ligne
 */
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import { t, type Locale } from '@i18n/index';

interface Props { lang?: Locale; }
const lang = Astro.props.lang ?? 'fr';
---

<Section background="warm" padding="md">
  <Container>

    {/* En-tête : numéro + titre */}
    <div class="relative mb-8 md:mb-10" data-reveal>
      <span class="section-number-xl">01</span>
      <span class="section-number">{t('manifeste', 'number', lang)}</span>
      <h2 class="font-display text-section font-bold uppercase text-primary-dark mt-3">
        {t('manifeste', 'title', lang)}
      </h2>
    </div>

    {/* 2 colonnes : vision (Playfair) | détail (Inter) */}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-16 gap-y-5" data-reveal data-reveal-delay="0.1">
      <div class="space-y-4">
        <p class="font-display text-lg md:text-xl font-light text-primary-dark leading-[1.75]" set:html={t('manifeste', 'p1', lang)} />
        <p class="font-display text-lg md:text-xl font-light text-primary-dark leading-[1.75]" set:html={t('manifeste', 'p2', lang)} />
      </div>
      <div class="space-y-4">
        <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.8]">
          {t('manifeste', 'p3', lang)}
        </p>
        <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.8]">
          {t('manifeste', 'p4', lang)}
        </p>
      </div>
    </div>

    {/* Citation — accent visuel */}
    <blockquote class="mt-10 md:mt-14 pt-8 border-t border-accent-gold/20 text-center" data-reveal data-reveal-delay="0.15">
      <p class="font-display text-xl md:text-2xl italic font-normal text-accent-brown leading-relaxed max-w-2xl mx-auto">
        &laquo; {t('manifeste', 'quote', lang)} &raquo;
      </p>
    </blockquote>

  </Container>
</Section>
