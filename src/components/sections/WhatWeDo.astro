---
/**
 * WhatWeDo — Section 02 (Services stratégiques)
 * 3 services compacts en 50/50 alternants, hover overlay sur images
 */
import Section from '@components/ui/Section.astro';
import Container from '@components/ui/Container.astro';
import TextMorph from '@components/react/TextMorph';
import { t, tArray, getLocalizedPath, type Locale } from '@i18n/index';

interface Props { lang?: Locale; }
const lang = Astro.props.lang ?? 'fr';

const services = [
  {
    num: '01',
    title1Key: 's1Title1' as const,
    title2Key: 's1Title2' as const,
    descKey: 's1Desc' as const,
    bullets: ['s1Bullet1', 's1Bullet2', 's1Bullet3'] as const,
    image: '/images/expertise/conception-villa-1.jpg',
    imageAlt: 'Conception architecturale villa Côte d\'Azur',
    href: '/expertise#renovation',
    direction: 'normal' as const,
  },
  {
    num: '02',
    title1Key: 's2Title1' as const,
    title2Key: 's2Title2' as const,
    descKey: 's2Desc' as const,
    bullets: ['s2Bullet1', 's2Bullet2', 's2Bullet3'] as const,
    image: '/images/expertise/interior-salon-1.jpg',
    imageAlt: 'Interior Refinement haut de gamme',
    href: '/expertise#design',
    direction: 'reverse' as const,
  },
  {
    num: '03',
    title1Key: 's3Title1' as const,
    title2Key: 's3Title2' as const,
    descKey: 's3Desc' as const,
    bullets: ['s3Bullet1', 's3Bullet2', 's3Bullet3'] as const,
    image: '/images/expertise/valorisation-terrasse-1.jpg',
    imageAlt: 'Villa valorisée sur la Côte d\'Azur',
    href: '/expertise#prestige',
    direction: 'normal' as const,
    stat: { valueKey: 's3StatValue' as const, labelKey: 's3StatLabel' as const },
  },
];
---

<Section padding="lg">
  <Container>

    {/* En-tête compact */}
    <div class="relative mb-12 md:mb-16" data-reveal>
      <span class="section-number-xl">02</span>
      <span class="section-number">{t('approche', 'number', lang)}</span>
      <h2 class="editorial-breadcrumb text-section text-primary-dark mt-4 cursor-default">
        <span class="editorial-nav-item font-display font-light uppercase text-primary-dark/10">{t('approche', 'title', lang)}</span>
        <span class="font-display font-extralight text-primary-dark/15 mx-1 select-none">/</span>
        <TextMorph client:visible words={tArray('approche', 'morphWords', lang)} className="editorial-nav-item font-display font-bold uppercase text-primary-dark" />
      </h2>
    </div>

    {/* 3 Services — layout 50/50 alternants */}
    <div class="space-y-16 md:space-y-24">
      {services.map((service, i) => (
        <div class:list={[
          'grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-14 items-center',
        ]}>

          {/* Image avec hover overlay */}
          <a
            href={getLocalizedPath(service.href, lang)}
            class:list={[
              'group relative block overflow-hidden rounded-lg',
              service.direction === 'reverse' ? 'order-1 lg:order-2' : '',
            ]}
            data-slide-in={service.direction === 'reverse' ? 'right' : 'left'}
          >
            <img
              src={service.image}
              alt={service.imageAlt}
              class="w-full aspect-[5/4] object-cover transition-transform duration-[1.2s] ease-smooth group-hover:scale-[1.05]"
              loading="lazy"
            />
            {/* Hover overlay */}
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/50 transition-all duration-500 flex items-center justify-center">
              <div class="opacity-0 group-hover:opacity-100 translate-y-3 group-hover:translate-y-0 transition-all duration-500 text-center">
                <span class="font-heading text-[11px] font-medium text-accent-gold uppercase tracking-[0.2em] block mb-2">
                  {t('approche', service.title1Key, lang)} {t('approche', service.title2Key, lang)}
                </span>
                <span class="inline-flex items-center gap-2 font-heading text-sm font-medium text-white uppercase tracking-wider">
                  {t('approche', 'learnMore', lang)}
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </div>
          </a>

          {/* Texte */}
          <div class:list={[
            service.direction === 'reverse' ? 'order-2 lg:order-1' : '',
          ]} data-reveal data-reveal-delay="0.1">
            <div class="flex items-center gap-3 mb-4">
              <span class="font-heading text-[40px] font-extralight text-accent-gold/25 leading-none">{service.num}</span>
            </div>
            <h3 class="font-display text-2xl md:text-4xl font-bold uppercase text-primary-dark mb-4">
              {t('approche', service.title1Key, lang)} <span class="font-heading font-light text-primary-dark/50">{t('approche', service.title2Key, lang)}</span>
            </h3>
            <p class="font-body text-base font-light text-[var(--color-text-light)] leading-[1.8] mb-5">
              {t('approche', service.descKey, lang)}
            </p>
            <ul class="space-y-2 mb-6">
              {service.bullets.map((bulletKey) => (
                <li class="flex items-start gap-3 text-[14px] font-light text-[var(--color-text-light)]">
                  <svg class="w-4 h-4 text-accent-gold mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {t('approche', bulletKey, lang)}
                </li>
              ))}
            </ul>
            {service.stat && (
              <div class="flex items-baseline gap-3 mb-6">
                <span class="font-display text-3xl font-light text-accent-gold">{t('approche', service.stat.valueKey, lang)}</span>
                <span class="font-body text-sm font-light text-text-secondary">{t('approche', service.stat.labelKey, lang)}</span>
              </div>
            )}
            <a
              href={getLocalizedPath(service.href, lang)}
              class="group/link inline-flex items-center gap-2 font-heading text-[14px] font-medium text-accent-brown"
            >
              <span class="relative">
                {t('approche', 'learnMore', lang)}
                <span class="absolute bottom-0 left-0 w-0 h-px bg-accent-brown group-hover/link:w-full transition-all duration-base" />
              </span>
              <svg class="w-4 h-4 transition-transform duration-fast group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>

        </div>
      ))}
    </div>

  </Container>
</Section>
