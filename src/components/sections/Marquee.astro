---
/**
 * Marquee â€” Bande scrollante editoriale
 * Texte horizontal en boucle infinie, style magazine luxe
 */
import { tArray, type Locale } from '@i18n/index';

interface Props { lang?: Locale; }
const lang = Astro.props.lang ?? 'fr';
const items = tArray('marquee', 'items', lang);
---

<div class="py-6 md:py-8 bg-primary-dark overflow-hidden">
  <div class="marquee-track flex whitespace-nowrap">
    {[...Array(4)].map(() => (
      <span class="font-display text-[clamp(48px,8vw,100px)] font-normal uppercase text-white/[0.08] mx-8 inline-block">
        {items.join(' \u2014 ')} &mdash;
      </span>
    ))}
  </div>
</div>
