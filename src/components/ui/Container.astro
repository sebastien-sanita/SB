---
/**
 * Container — Conteneur centré avec padding généreux (Ayocin)
 * Gère le padding horizontal (40px desktop, 24px mobile)
 */
import { cn } from '@utils/cn';

interface Props {
  size?: 'narrow' | 'md' | 'lg' | 'full';
  class?: string;
  [key: string]: any;
}

const { size = 'lg', class: className, ...rest } = Astro.props;

const sizeClasses: Record<string, string> = {
  narrow: 'max-w-narrow',     /* 900px — manifeste, storytelling */
  md: 'max-w-[1024px]',       /* Sections moyennes */
  lg: 'max-w-container',      /* 1400px — standard */
  full: 'max-w-full',
};

const classes = cn(
  'mx-auto w-full',
  size !== 'full' && 'px-6 md:px-10',
  sizeClasses[size],
  className,
);
---

<div class={classes} {...rest}>
  <slot />
</div>
