---
/**
 * Grid — Grille responsive CSS Grid
 * Mobile : 1 col → Tablet : 2 cols → Desktop : n cols
 */
import { cn } from '@utils/cn';

interface Props {
  cols?: 1 | 2 | 3 | 4 | 'auto';
  gap?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  [key: string]: any;
}

const {
  cols = 3,
  gap = 'md',
  class: className,
  ...rest
} = Astro.props;

const gapClasses: Record<string, string> = {
  sm: 'gap-4',
  md: 'gap-6',
  lg: 'gap-8',
  xl: 'gap-12',
};

/* Responsive : 1 col mobile → 2 cols tablet → n cols desktop */
const colClasses: Record<string | number, string> = {
  1: 'grid-cols-1',
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4',
  auto: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-[repeat(auto-fit,minmax(300px,1fr))]',
};

const classes = cn(
  'grid',
  colClasses[cols],
  gapClasses[gap],
  className,
);
---

<div class={classes} {...rest}>
  <slot />
</div>
