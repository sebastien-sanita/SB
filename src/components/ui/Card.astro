---
/**
 * Card — Carte premium Ayocin × Aker
 * Border-radius 24px (Ayocin), ombres ultra-subtiles (0.06 max)
 * Hover : translateY(-8px) + shadow-hover (Aker)
 */
import { cn } from '@utils/cn';

interface Props {
  padding?: 'sm' | 'md' | 'lg' | 'none';
  hover?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  padding = 'md',
  hover = false,
  class: className,
  ...rest
} = Astro.props;

const paddingClasses: Record<string, string> = {
  none: '',
  sm: 'p-5',
  md: 'p-6 md:p-8',
  lg: 'p-8 md:p-10',
};

const classes = cn(
  'bg-white',
  'border border-border',
  'transition-all duration-500 ease-smooth',
  paddingClasses[padding],
  hover && 'hover:-translate-y-1',
  className,
);
---

<div class={classes} {...rest}>
  <slot />
</div>
